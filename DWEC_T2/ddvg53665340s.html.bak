    <body>
		<h1>Tarea 2 de Desarrollo Web en Entorno Cliente (DWEC)</h1>
		<div>
			<script>
				<!--> Creo los 2 arrays</!-->
				var fichAlumno = ["Daniel", "Del Valle", "González", "53665340S", "DWEC", "Desarrollo de Aplicaciones Web", "Instituto FOC" ];
				var etiquetas = ["Nombre", "Apellido 1", "Apellido 2", "DNI", "Módulo", "Ciclo", "Centro"];
				

				<!--> En todos los bucles me ayudaré de la variable "i" que actuará como un contador y aumentará su valor con cada ciclo del bucle.</!-->					
				document.write("<h2> Bucle For </h2>");
				for(var i = 0;i<etiquetas.length;i++){
					document.write(etiquetas[i] + ": " + "<b>"+ fichAlumno[i] +"</b>" + "<br>");
				}		
						
				document.write("<h2> Bucle While </h2>");
				var i = 0;
				while(i<etiquetas.length){
					document.write(etiquetas[i] + ": " + "<b>"+ fichAlumno[i] +"</b>" + "<br>");
					i++;
					}								
			
				document.write("<h2> Bucle Do While </h2>");
				var i = 0;
				do{
					document.write(etiquetas[i] + ": " + "<b>"+ fichAlumno[i] +"</b>" + "<br>");
					i++;
				}while(i<etiquetas.length);		

			</script>
		</div>		
    </body>
